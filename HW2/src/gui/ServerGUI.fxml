<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ServerGUI">
   <children>
      <Accordion />
      <Pane prefHeight="561.0" prefWidth="612.0">
         <children>
            <!-- Run Server Button -->
            <Button fx:id="show" layoutX="45.0" layoutY="41.0" mnemonicParsing="false" onAction="#runServer" text="Run Server" />
            
            <!-- IP Field -->
            <TextField fx:id="ip" layoutX="218.0" layoutY="125.0" prefHeight="31.0" prefWidth="280.0" />
            <Label layoutX="51.0" layoutY="130.0" prefHeight="21.0" prefWidth="105.0" text="IP:" />

            <!-- Host Name Field -->
            <TextField fx:id="hostName" layoutX="218.0" layoutY="241.0" prefHeight="31.0" prefWidth="280.0" />
            <Label layoutX="47.0" layoutY="241.0" prefHeight="21.0" prefWidth="127.0" text="Host Name:" />

            <!-- Status Field -->
            <TextField fx:id="connStatus" layoutX="217.0" layoutY="353.0" prefHeight="31.0" prefWidth="280.0" />
            <Label layoutX="47.0" layoutY="358.0" prefHeight="21.0" prefWidth="127.0" text="Status:" />

            <!-- Close Button -->
            <Button fx:id="exit" layoutX="264.0" layoutY="474.0" mnemonicParsing="false" onAction="#getCloseBtn" text="Close" />

            <!-- Server Status Label -->
            <Label fx:id="serverRun" layoutX="218.0" layoutY="45.0" />
         </children>
      </Pane>
   </children>
</AnchorPane>
