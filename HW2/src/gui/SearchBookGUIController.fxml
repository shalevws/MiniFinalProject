<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchBookGUIController">
   <children>
      <Accordion />
      <Pane fx:id="nameOfTheBook" layoutX="-14.0" prefHeight="618.0" prefWidth="818.0">
         <children>
            <!-- Title Label -->
            <Label layoutX="89.0" layoutY="36.0" text="Search a book:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>

            <!-- Name of the book Label and TextField -->
            <Label layoutX="62.0" layoutY="126.0" text="Name of the book:" />
            <TextField fx:id="bookName" layoutX="189.0" layoutY="122.0" prefHeight="25.0" prefWidth="217.0" />
            
            <!-- Search Button -->
            <Button fx:id="search" layoutX="424.0" layoutY="122.0" mnemonicParsing="false" onAction="#searchBtn" text="Search" />

            <!-- Author/Genre RadioButtons -->
            <RadioButton fx:id="authorName" layoutX="75.0" layoutY="225.0" mnemonicParsing="false" onAction="#authorRadioButton" text="Name of author" />
            <RadioButton fx:id="genere" layoutX="75.0" layoutY="250.0" mnemonicParsing="false" onAction="#genreRadioButton" text="Genere of the book" />

            <!-- Author/Genre TextField -->
            <TextField fx:id="author_genere" layoutX="75.0" layoutY="288.0" />

            <!-- Error Message Label -->
            <Label fx:id="errorMsg" layoutX="174.0" layoutY="184.0" />

            <!-- Books List View -->
            <ListView fx:id="booksListView" layoutX="33.0" layoutY="348.0" prefHeight="200.0" prefWidth="366.0" />

            <!-- Buttons (Return and Exit) -->
            <Button fx:id="return1" layoutX="56.0" layoutY="572.0" mnemonicParsing="false" onAction="#getReturnBtn" text="Return" />
            <Button fx:id="exit" layoutX="760.0" layoutY="572.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
         </children>
      </Pane>
   </children>
</AnchorPane>
